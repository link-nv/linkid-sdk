<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>net.lin-k.safe-online.client</groupId>
        <artifactId>sdk</artifactId>
        <version>GIT-SNAPSHOT</version>
    </parent>

    <name>SafeOnline Web Service Definitions</name>
    <description>Contains WSDLs for the SafeOnline Web Services.</description>

    <groupId>net.lin-k.safe-online.client.sdk</groupId>
    <artifactId>safe-online-ws</artifactId>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jax-ws-commons</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <verbose>true</verbose>
                    <xdebug>true</xdebug>
                    <extension>true</extension>
                    <target>2.1</target>
                    <wsdlFiles>
                        <wsdlFile>saml-protocol-2.0.wsdl</wsdlFile>
                        <wsdlFile>liberty-idwsf-dst-ref-v2.1-link.wsdl</wsdlFile>
                        <wsdlFile>safe-online-auth.wsdl</wsdlFile>
                        <wsdlFile>safe-online-idmapping.wsdl</wsdlFile>
                        <wsdlFile>notification-consumer.wsdl</wsdlFile>
                        <wsdlFile>notification-producer.wsdl</wsdlFile>
                        <wsdlFile>notification-subscription-manager.wsdl</wsdlFile>
                        <wsdlFile>safe-online-session.wsdl</wsdlFile>
                        <wsdlFile>ws-trust-1.3.wsdl</wsdlFile>
                        <wsdlFile>xkms.wsdl</wsdlFile>
                    </wsdlFiles>
                    <bindingFiles>
                        <bindingFile>jaxb-bindings.xml</bindingFile>
                    </bindingFiles>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/wsdl</directory>
                <excludes>
                    <exclude>catalog.xml</exclude>
                    <exclude>catalog.dtd</exclude>
                </excludes>
            </resource>
        </resources>
    </build>

    <dependencies>

        <!-- Specific Dependencies: External -->
        <dependency>
            <groupId>javax.jws</groupId>
            <artifactId>jsr181-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk16</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>net.lin-k.safe-online</groupId>
            <artifactId>safe-online-container-test</artifactId>
            <version>GIT-SNAPSHOT</version>
            <type>pom</type>
        </dependency>

    </dependencies>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

</project>
